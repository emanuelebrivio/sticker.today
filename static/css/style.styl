@import ('nib')
@import url('//fonts.googleapis.com/css?family=Leckerli+One|Open+Sans:300,400,600,700')


/* @CUSTOM colors for easy use */
_accent = #37c614
/* end @CUSTOM */

.open-sans
  font-family 'Open Sans', sans-serif

.leckerli-one
  font-family 'Leckerli One', serif

.pure-g [class *='pure-u'],
.pure-g-r [class*="pure-u"]
  @extends .open-sans

html,
body
  width 100%
  height 100%
  @extends .open-sans
  font-size 13px

.pure-form
  input[type='text'], input[type='password'], input[type='email'], input[type='url'], input[type='date'], input[type='month'], input[type='time'], input[type='datetime'], input[type='datetime-local'], input[type='week'], input[type='number'], input[type='search'], input[type='tel'], input[type='color'], select, textarea
    @extends .open-sans
  button
    @extends .open-sans

.pure-button
  @extends .open-sans
  background _accent
  color #FFF
  transition background 0.5s ease
  padding 9px 20px 10px 20px
  border-radius 5px
  box-shadow none
  border none
  text-decoration none
  span
    text-transform uppercase
    font-weight 600
    font-size 12px
  &:hover
    background lighten(_accent, 20%)

/* @CUSTOM CSS for fast start */
.container
  width 960px
  margin auto

.padding-container
  padding 20px

.page
  width 100%
  height auto

h1, h2, h3
  @extends .leckerli-one
  font-weight normal
h4, h5, h6
  font-weight 600

.spacer-5
  height 5px
.spacer-10
  height 10px
.spacer-20
  height 20px
.spacer-40
  height 40px
.spacer-60
  height 60px
.spacer-80
  height 80px
.spacer-100
  height 100px

.text-left
  text-align left
.text-center
  text-align center
.text-right
  text-align right

a.link
  text-decoration none
  color #333
  box-shadow inset 0 -2px 0 rgba(#333, 0.2)
  transition color 0.3s ease, box-shadow 0.3s ease
  display inline-block
  &:hover
    color _accent
    box-shadow inset 0 -2px 0 rgba(_accent, 0.3)
/* end @CUSTOM */


header
  background #FFF
  border-bottom 1px solid #DDD
  padding 20px
  position fixed
  top 0
  left 0
  width 100%
  opacity 0.9
  & > *
    display inline-block
    vertical-align bottom
  .logo
    width 64px
    height 64px
  h4
    font-size 13px
    font-weight 700
    text-transform uppercase
    margin 0
    margin-left 20px

#results
  margin 0
  padding 0
  padding-top 105px
  list-style none
  li
    background-color #F2F2F2
    background-image url('../img/next-arrow.png')
    background-position 98% center
    background-size 16px
    background-repeat no-repeat
    border-bottom 1px solid #DDD
    display block
    padding 10px 20px

    &:hover,
    &:active
      background-color _accent
      color #FFF

    & > *
      display inline-block
      vertical-align middle

    h4
      margin 0
      max-width 200px
      overflow hidden
      text-overflow ellipsis
      white-space no-wrap

    span
      font-size 12px
      color rgba(#000, 0.6)
      small
        font-size 10px
        text-transform uppercase
        display inline-block
        margin-right 5px

    .thumbnail
      width 50px
      height 50px
      border-radius 25px
      box-shadow 0 0 5px rgba(#333, 0.2)
      margin-right 20px
      background #FFF
      img
        max-width 100%
        height auto

#mask
  position fixed
  display none
  top 0
  left 0
  width 100%
  height 100%
  z-index 9
  background rgba(#000, 0.6)
  opacity 0
  transition opacity 0.5s ease
  &.open
    opacity 1

#modal
  position fixed
  display none
  top 0
  left 100%
  transition left 0.5s ease
  width 100%
  height 100%
  z-index 10
  overflow auto
  -webkit-overflow-scrolling touch
  background #FFF
  &.open
    left 0

  .modal-header
    background #FFF
    border-bottom 1px solid #DDD
    padding 20px

    #close-modal
      display inline-block
      vertical-align middle
      width 16px
      height 16px
      padding 10px
      cursor pointer
      img
        width 16px
        height 16px

    .pure-button
      display inline-block
      vertical-align middle

  .preview
    img
      display block
      max-width 90%
      margin auto

  
